<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ntvid.timemanager.MainActivity">

    <Button
        android:id="@+id/seeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="65dp"
        android:text="List"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="@+id/seeList"
        app:layout_constraintTop_toBottomOf="@+id/seeList" />

    <Button
        android:id="@+id/toChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Chart"
        app:layout_constraintStart_toStartOf="@+id/goToAdd"
        app:layout_constraintTop_toBottomOf="@+id/goToAdd" />
</android.support.constraint.ConstraintLayout>
